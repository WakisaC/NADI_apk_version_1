<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".choose"
    tools:showIn="@layout/app_bar_choose">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="103dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="N A D I"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="50dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="181dp"
            android:layout_height="162dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/pic" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:text="Choose Assessment Type"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp" />



        <Button
            android:id="@+id/button"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="General Assessment"
            android:background="@drawable/shape"
            android:textColor="@color/background2"
            android:textStyle="bold"
            android:onClick="general"

            />

        <Button
            android:id="@+id/button2"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:text="Wasting Assessment"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:textColor="@color/background2"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:onClick="wasting"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:text="Stunting Assessment"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:textStyle="bold"
            android:textColor="@color/background2"
            android:onClick="stunting"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Underweight Assessment"
            android:background="@drawable/shape"
            android:textColor="@color/background2"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:onClick="underweight"
            />
    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>